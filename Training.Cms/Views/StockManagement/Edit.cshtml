@using Training.Common.EnumTypes
@model Training.Cms.Models.StockEventViewModel
<div class="row">
    <div class="col-md-12">
        <form id="editStockForm" asp-controller="StockManagement" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
            <input type="hidden" asp-for="StockId" />
            <div class="form-floating mb-2">
                <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<StockEventType>()" required>
                    <option value="">Select a type</option>
                </select>
                <label asp-for="Type">Type</label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Reason" class="form-control" placeholder=" " />
                <label asp-for="Reason" class="form-label">Reason</label>
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Quantity" class="form-control" placeholder=" " type="number"/>
                <label asp-for="Quantity" class="form-label">Quantity</label>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save </button>
            </div>
        </form>
    </div>
</div>
