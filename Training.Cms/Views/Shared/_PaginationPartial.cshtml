@model Training.BusinessLogic.Common.Pagination
@if (Model != null)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-end">
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action(ViewContext.RouteData.Values["action"]?.ToString(), new { skip = Model.CurrentPage - 1 })">
                    &lt;&lt;
                </a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action(ViewContext.RouteData.Values["action"]?.ToString(), new { skip = i })">@i</a>
                </li>
            }
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action(ViewContext.RouteData.Values["action"]?.ToString(), new { skip = Model.CurrentPage + 1 })">
                    &gt;&gt;
                </a>
            </li>
        </ul>
    </nav>
}