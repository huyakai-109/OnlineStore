<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Training.Cms</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.3/css/dataTables.dataTables.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.4/dist/sweetalert2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Training.Cms.styles.css" asp-append-version="true" />

    <style>
        html::-webkit-scrollbar {
            display: none;
        }

        .swal2-shown {
            padding-right: 0 !important
        }

        input:focus,
        textarea:focus,
        select:focus {
            outline: none !important;
            box-shadow: none !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3 fixed-top">
            <div class="container">
                <a class="navbar-brand me-5" asp-area="" asp-controller="Home" asp-action="Index">Training.Cms</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item me-4">
                            <a class="nav-link text-white" asp-area="" asp-controller="UserManagement" asp-action="Index">User</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-white" asp-area="" asp-controller="ProductManagement" asp-action="Index">Product</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-white" asp-area="" asp-controller="CategoryManagement" asp-action="Index">Category</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link text-white" asp-area="" asp-controller="StockManagement" asp-action="Index">Stock</a>
                        </li> 
                        <li class="nav-item me-4">
                            <a class="nav-link text-white" asp-area="" asp-controller="StockEventManagement" asp-action="Index">Stock Events</a>
                        </li> 
                        <li class="nav-item me-4">
                            <a class="nav-link text-white" asp-area="" asp-controller="" asp-action="">Order</a>
                        </li> 
                        <li class="nav-item me-4">
                            <a class="nav-link text-white" asp-area="" asp-controller="" asp-action="">Report</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="my-4 py-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Training.Cms - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.3/js/dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.12.4/dist/sweetalert2.all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
